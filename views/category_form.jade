block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text' placeholder='Enter the category name' name='name' required='true' value=(undefined===name ? '' : category.name) )
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Enter your description here' name='description' required='true' value=(undefined===description ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg